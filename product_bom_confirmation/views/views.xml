<odoo>
    <data>
        <record id="view_product_template_inherit_form" model="ir.ui.view">
            <field name="name">product.template.inherit.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='sale_ok']" position="before">
                    <field name="tx_bom_response"/>
                </xpath>
            </field>
        </record>

         <record id="view_product_product_inherit_form" model="ir.ui.view">
            <field name="name">product.product.inherit.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <!--<xpath expr="//sheet" position="before">
                    <button type="object" name="action_confirming_variant_bom" string="BOM" class="btn-danger"/>

                </xpath>-->
                <xpath expr="//field[@name='sale_ok']" position="before">
                    <field name="tx_bom_response"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>